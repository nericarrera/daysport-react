// Especifica tu conexi√≥n a la base de datos
datasource db {
  provider = "postgresql"
  url      = "postgresql://admin:securepassword@localhost:5432/ecommerce?schema=public"
}

// Generador del cliente Prisma
generator client {
  provider = "prisma-client-js"
}

// Modelo de ejemplo (Product)
model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  description String?
  category    String
  createdAt   DateTime @default(now())
}