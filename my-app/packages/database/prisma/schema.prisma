datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Mejor usar variables de entorno
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  description String?
  category    String   // Cambiaremos esto a relación después
  images      String[] // Array de URLs de imágenes
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}