{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"],
      "@auth/*": ["src/modules/user/*"]
    },
    "types": ["jest"]  // <-- Añade esta línea
  },
  "include": ["src/**/*", "prisma.config.ts"],
  "exclude": ["../../node_modules", "test", "dist"]
}