{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "types": ["node", "jest"],
    "paths": {
      "@app/*": ["src/*"],
      "@auth/*": ["src/modules/user/*"]
    },
    
  },
  "include": ["src/**/*", "prisma.config.ts", "scripts"],
  "exclude": ["../../node_modules", "test", "dist"]
}